<!DOCTYPE html>
<meta charset="utf-8">
<style>

#states {
  fill: none;
  stroke: black;
  stroke-width: 1.5px;
  stroke-linejoin: round;
}

#quakes {
  fill: crimson;
}
  
</style>
<svg width="960" height="960"></svg>
<script src="//d3js.org/d3.v4.min.js"></script>
<script src="//d3js.org/d3-tile.v0.0.min.js"></script>
<script src="//d3js.org/topojson.v1.min.js"></script>
<script>

var pi = Math.PI,
    tau = 2 * pi;

// Create an SVG element and set its dimensions
var svg = d3.select("svg"),
    width = +svg.attr("width"),
    height = +svg.attr("height");

// Set the projection and zoom scale
var projection = d3.geoMercator()
    .scale((1 << 15) / tau)
    .translate([width / 2, height / 2])
    .center([-97.921387, 35.5]);

// Set the path
var path = d3.geoPath()
    .projection(projection);
   
var usgs = "https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/all_week.geojson";
var url = "https://umbcvis.github.io/classes/class-03/us.json"

// Plot the states data layer on a tile layer
d3.json(url, plotStates);
function plotStates(error, states) {
  if (error) throw error;
  
  var tiles = d3.tile()
      .size([width, height])
      .scale(projection.scale() * tau)
      .translate(projection([0, 0]))
      ();

  svg.selectAll("image")
      .data(tiles)
    .enter().append("image")
      .attr("xlink:href", function(d) { return "http://" + "abc"[d[1] % 3] + ".tile.openstreetmap.org/" + d[2] + "/" + d[0] + "/" + d[1] + ".png"; })
      .attr("x", function(d) { return (d[0] + tiles.translate[0]) * tiles.scale; })
      .attr("y", function(d) { return (d[1] + tiles.translate[1]) * tiles.scale; })
      .attr("width", tiles.scale)
      .attr("height", tiles.scale);

  svg.append("path")
      .attr("id", "states")
      .datum(topojson.mesh(states, states.objects.us))
      .attr("d", path); 
  
  // Plot the earthquake data on the tile layer
  d3.json(usgs, plotQuakes);
  function plotQuakes(error, usgs_data) {
  if (error) throw error;
  
  svg.append("path")
    .attr("id", "quakes")
    .datum({type: "FeatureCollection", features: usgs_data.features})
    .attr("d", path);
    
  }
}


</script>
